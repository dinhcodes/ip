<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.SVGPath?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_LEFT" maxHeight="1.7976931348623157E308"
         maxWidth="1.7976931348623157E308"
         prefWidth="400.0" stylesheets="@../css/dialog-box.css" type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/17">
    <children>
        <!-- Profile picture -->
        <HBox alignment="BOTTOM_CENTER">
            <children>
                <ImageView fx:id="displayPicture" fitHeight="47.0" fitWidth="46.0" pickOnBounds="true"
                           preserveRatio="true">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </ImageView>
            </children>
        </HBox>

        <!-- Message bubble with tail -->
        <HBox alignment="BOTTOM_LEFT" styleClass="ello-bubble">
            <children>
                <SVGPath fx:id="dialogTail" content="M 15 5 L 15 15 L 5 15 Z" styleClass="ello-tail"/>
                <Label fx:id="dialog" maxWidth="400.0" minHeight="-Infinity" styleClass="ello-label" text="Label"
                       maxHeight="Infinity"
                       wrapText="true" textOverrun="CLIP">
                    <padding>
                        <Insets bottom="14.0" left="16.0" right="16.0" top="14.0"/>
                    </padding>
                </Label>
            </children>
        </HBox>

        <!-- Spacer to push content -->
        <HBox HBox.hgrow="ALWAYS"/>
    </children>
    <padding>
        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0"/>
    </padding>
</fx:root>
